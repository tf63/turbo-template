{
    "name": "turbo-template",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "type-check": "turbo type-check",
        "clean": "turbo clean",
        "format": "biome format . --write && prettier . --write ",
        "prepare": "husky",
        "generate": "plop"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.8.3",
        "husky": "^9.1.1",
        "lint-staged": "^15.2.7",
        "turbo": "^2.0.9",
        "plop": "^4.0.1"
    },
    "lint-staged": {
        "**.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome check --write"],
        "**.{md,mdx,yml,yaml,css,html}": ["prettier --write"]
    },
    "packageManager": "pnpm@8.15.6",
    "engines": {
        "node": ">=18"
    },
    "volta": {
        "node": "20.11.0"
    }
}
