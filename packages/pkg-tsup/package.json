{
    "name": "@repo/pkg-tsup",
    "type": "module",
    "version": "0.0.0",
    "private": false,
    "license": "MIT",
    "scripts": {
        "dev": "pnpm build:fast -- --watch",
        "prebuild": "rm -rf dist/",
        "build": "tsup src --dts",
        "build:fast": "tsup src",
        "clean": "rm -rf node_modules/ .turbo/"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "devDependencies": {
        "@repo/typescript": "workspace:*",
        "tsup": "^8.3.0"
    }
}
